{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "jsx": "react",
      "noLib": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
    },
    "include": ["src/**/*", "src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }